$("#product-price-container").html("<%= j render('product_price', regular_price: number_to_currency(regular_price), sale_price: number_to_currency(sale_price)) %>")
$("#product_id").val(<%= product_id %>)
$("#slider-product-cart-form-add-to-cart").text("<% if sale_price %> <%= number_to_currency(sale_price) %> <% else %> <%= number_to_currency(regular_price) %> <% end %>")
$("#slider-product-cart-form-add-to-cart-image").html("<%= j image_tag(image_url_update, class: 'h-10') %>")
var indicators = $(".carousel-indicators")
$(".carousel-open")?.each((i, element) => {
    if (i === <%= index %>) {
        $(element).prop('checked', true)
    } else {
        $(element).prop('checked', false)
    }
})