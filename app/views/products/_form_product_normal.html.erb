<%= simple_form_for(@product) do |f| %>
  <%= f.simple_fields_for :product_meta do |meta| %>
    <div class="flex mb-3 mx-0 tab-view pr-2">

      <div class="flex-grow mx-0 px-0 border-right background-white-grey tabs-panel">

        <div class="flex mt-0-imp mx-0 flex cursor-pointer active tab-panel background-white-grey py-2">
          <div class="w-2/12 px-4 text-left">
            <i class="fas mt-1 fa-wrench text-center"></i>
          </div>
          <p class="ml-3 f4">General</p>
        </div>

        <div class="flex mt-1 mx-0 flex cursor-pointer tab-panel background-white-grey py-2">
          <div class="w-2/12 px-4 text-left">
            <i class="fas mt-1 fa-shipping-fast text-center"></i>
          </div>
          <p class="ml-3 f4">Inventory</p>
        </div>

        <div class="flex mx-0 mt-1 flex cursor-pointer tab-panel background-white-grey py-2">
          <div class="w-2/12 px-4 text-left">
            <i class="fas mt-1 fa-paperclip text-center"></i>
          </div>
          <p class="ml-3 f4">Shipping</p>
        </div>

        <div class="flex mx-0 mt-1 flex cursor-pointer tab-panel background-white-grey py-2">
          <div class="w-2/12 px-4 text-left">
            <i class="fas mt-1 fa-ethernet text-center"></i>
          </div>
          <p class="ml-3 f4">Linked Products</p>
        </div>

        <div class="flex mx-0 mt-1 flex cursor-pointer tab-panel background-white-grey py-2">
          <div class="w-2/12 px-4 text-left">
            <i class="fas mt-1 fa-ethernet text-center"></i>
          </div>
          <p class="ml-3 f4">Attributes</p>
        </div>

        <div class="flex mx-0 mt-1 flex cursor-pointer tab-panel background-white-grey py-2">
          <div class="w-2/12 px-4 text-left">
            <i class="fas mt-1 fa-ellipsis-v text-center"></i>
          </div>
          <p class="ml-3 f4">Advances</p>
        </div>

        <div class="flex mx-0 flex cursor-pointer tab-panel background-white-grey py-2">
          <div class="w-2/12 px-4 text-left">
            <i class="fas mt-1 fa-users-cog text-center"></i>
          </div>
          <p class="ml-3 f4">More Options</p>
        </div>

        <div class="flex mx-0 flex cursor-pointer tab-panel background-white-grey py-2">
          <div class="w-2/12 px-4 text-left">
            <i class="fas mt-1 fa-users-cog text-center"></i>
          </div>
          <p class="ml-3 f4">Extra Properties</p>
        </div>

      </div>

      <div class="w-8/12 ml-3 mx-0 px-0 tabs-content">
        <!-- General Attribute -->
        <div id="input-general" class="active tab-content ">

          <%= meta.simple_fields_for :product_detail do |detail| %>
            <div class="field">
              <div class="control flex flex-wrap mt-2 justify-start">
                <%= detail.input :regular_price, label: "Regular Price ($)", required: true,
                                 placeholder: "Price",
                                 input_html: {class: "input w-1/2 flex-grow py-2  font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"}, wrapper: false, label_html: {class: "label w-4/12 flex-shrink-0 text-left"} %>
              </div>
            </div>
          <% end %>

          <%= meta.simple_fields_for :product_sale_price do |sale_price| %>
            <div class="field mt-2">
              <div class="control flex mt-2 justify-start">
                <%= sale_price.input :sale_price, label: "Sale Price ($)", required: false,
                                     placeholder: "Sale Price",
                                     input_html: {class: "input w-8/12 flex-grow w-full py-2  font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"}, wrapper: false, label_html: {class: "label w-4/12 flex-shrink-0 text-left"} %>
              </div>
            </div>

            <div class="field mt-2">
              <div class="control flex mt-2 justify-start">
                <%= sale_price.input :sale_date_start, as: :date, html5: true, label: "Sale Price Date Start", required: false,
                                     placeholder: "Sale Price",
                                     input_html: {class: "input flex-grow w-full mr-2 py-2  font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"}, wrapper: false, label_html: {class: "label w-4/12 flex-shrink-0 text-left"} %>
                <%= sale_price.input :sale_date_start_time, as: :time, html5: true, required: false,
                                     placeholder: "Sale Price",
                                     input_html: {class: "input flex-grow w-full ml-2 py-2  font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"}, wrapper: false, label_html: {class: "label w-4/12 flex-shrink-0 text-left hidden"} %>

              </div>

              <div class="control flex mt-2 justify-start">
              </div>

            </div>

            <div class="field mt-2">
              <div class="control flex mt-2 justify-start">
                <%= sale_price.input :sale_date_end, as: :date, html5: true, label: "Sale Price Date End", required: false,
                                     placeholder: "Sale Price",
                                     input_html: {class: "input flex-grow w-full mr-2 py-2  font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"}, wrapper: false, label_html: {class: "label w-4/12 flex-shrink-0 text-left"} %>

                <%= sale_price.input :sale_date_end_time, as: :time, html5: true, required: false,
                                     placeholder: "Sale Price",
                                     input_html: {class: "input flex-grow w-full ml-2 py-2  font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"}, wrapper: false, label_html: {class: "label w-4/12  flex-shrink-0text-left, hidden"} %>
              </div>
            </div>

          <% end %>

        </div>
        <!-- !General Attribute -->

        <!-- Inventory Input -->
        <div id="input-inventory" class="tab-content ">

          <%= meta.simple_fields_for :product_inventory do |inventory| %>

            <div class="field mt-2">
              <div class="control flex mt-2 justify-start">
                <%= inventory.input :sku, label: "SKU", required: false,
                                    placeholder: "SKU",
                                    input_html: {class: "input w-8/12 flex-grow w-full py-2  font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"}, wrapper: false, label_html: {class: "label w-4/12 flex-shrink-0 text-left"} %>
              </div>
            </div>

            <div class="field mt-2">
              <div class="control flex mt-2 justify-start">
                <%= inventory.label "Manage Stock", class: "label w-4/12 flex-shrink-0 text-left" %>
                <div>
                  <%= inventory.check_box :manage_stock, class: "input" %>
                  <span class="f7">Enable manage Stock at product level</span>
                </div>
              </div>
            </div>

            <div class="field mt-2">
              <div class="control flex mt-2 justify-start">
                <%= inventory.input :stock_status, label: "Stock Status", required: false,
                                    placeholder: "Status",
                                    input_html: {class: "input w-8/12 flex-grow w-full py-2  font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"}, wrapper: false, label_html: {class: "label w-4/12 flex-shrink-0 text-left"} %>
              </div>
            </div>

            <div class="field mt-2">
              <div class="control flex mt-2 justify-start">
                <%= inventory.label "Sold individually", class: "label w-4/12 flex-shrink-0 text-left" %>
                <div>
                  <%= inventory.check_box :sold_individually, class: "input" %>
                  <span class="f7">Enable this to only allow one of the item to be bought in a single order</span>
                </div>
              </div>
            </div>

          <% end %>


        </div>
        <!-- !Inventory Input -->

        <!-- Shipping Input -->
        <div id="input-inventory" class="tab-content">

          <%= meta.simple_fields_for :product_shipping do |shipping| %>

            <!-- Weight -->
            <div class="field mt-2">
              <div class="control flex mt-2 justify-start">
                <%= shipping.input :weight, label: "Weight (kg)", required: false,
                                   placeholder: "1 kg",
                                   input_html: {class: "input w-8/12 flex-grow w-full py-2  font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"}, wrapper: false, label_html: {class: "label w-4/12 flex-shrink-0 flex-shrink-0 text-left"} %>
              </div>
            </div>
            <!-- !Weight -->

            <!-- Dimensions -->
            <div class="field mt-2">
              <div class="control flex mt-2 justify-start">
                <label for="" class="w-4/12 flex-shrink-0 text-left">Dimensions</label>

                <div class="w-8/12 flex-grow m-0 p-0 flex justify-between">
                  <div class="field w-4/12 column is-4 pl-0 pr-2">
                    <div class="control">
                      <!--                      <label class="label">Brand</label>-->
                      <div class="control">
                        <%= shipping.input :width, placeholder: "Width",
                                           input_html: {class: "input w-full  font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"},
                                           wrapper: false, label_html: {class: "hidden"} %>
                      </div>
                    </div>
                  </div>
                  <div class="field w-4/12 column is-4 pr-2">
                    <div class="control">
                      <!--                      <label class="label">Finish</label>-->
                      <div class="control">
                        <%= shipping.input :height, placeholder: "Height",
                                           input_html: {class: "input w-full  font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"},
                                           wrapper: false, label_html: {class: "hidden"} %>
                      </div>
                    </div>
                  </div>
                  <div class="field w-4/12 column is-4 pr-0">
                    <div class="control">
                      <!--                      <label class="label">Condition</label>-->
                      <div class="control">
                        <%= shipping.input :length, placeholder: "Length",
                                           input_html: {class: "input w-full  font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"},
                                           wrapper: false, label_html: {class: "hidden"} %>
                      </div>
                    </div>
                  </div>
                </div>

              </div>
            </div>
            <!-- !Dimensions -->

            <!-- Shipping Class -->
            <div class="field mt-2">
              <div class="control flex items-center">
                <%= shipping.input :shipping_class, placeholder: "Class", label: "Shipping class",
                                   as: :string,
                                   input_html: {class: "input flex-grow w-full py-2  font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"},
                                   wrapper: false, label_html: {class: "label w-4/12 flex-shrink-0 flex-shrink-0 text-left"} %>
                <div class="w-2/12 text-right align-self-center">
                  <span class="icon is-small is-right"><i class="fa fa-tag"></i></span>
                </div>
              </div>
            </div>
            <!-- !Shipping Class -->

          <% end %>

        </div>
        <!-- !Shipping Input -->

        <!-- Linked Product -->
        <div id="input-inventory" class="tab-content">
          <%= meta.simple_fields_for :product_linked do |linked| %>
            <%= linked.input :product_upsell_ids_string, label: "Products Upsells", required: false,
                             placeholder: "Upsells",
                             input_html: {class: "input tags upsell w-8/12 flex-grow w-full py-2  font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"}, wrapper: false, label_html: {class: "label text-left block"} %>
            <%= linked.input :product_cross_sell_ids_string, label: "Products Cross sells", required: false,
                             placeholder: "Cross sells",
                             input_html: {class: "input tags cross-sell w-8/12 flex-grow w-full py-2  font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"}, wrapper: false, label_html: {class: "label text-left block mt-3"} %>
          <% end %>
        </div>
        <!-- !Linked Product -->

        <!-- Attributes -->
        <div id="input-inventory" class="tab-content flex flex-col h-full">
          <div class="flex flex-col h-full">
            <div class="field mt-2">
              <div class="control flex mt-2 justify-start">
                <div class="w-50">
                  <% unless @categories.nil? %>
                    <%= f.select :category_ids, options_for_select(@categories.map { |s| [s.name, s.id] }), class: "w-50" %>
                  <% end %>
                </div>
                <div>
                  <div id="button-add-attribute" class="custom-btn-normal ml-2 f6 h-full">Add</div>
                </div>

              </div>
            </div>

            <div class="field mt-2 flex-grow">
              <div class="flex flex-col align-items-start">

                <hr class="my-2 w-full">
                <div id="product-attributes-container" class="w-full">

                </div>

                <div id="group-container-form-add-attributes" class="w-full"></div>

                <!-- Save Attributes -->
                <div class="button-wishlist flex px-3 width-max" id="button-save-attributes">
                  <div class="flex font-roboto outline-none-imp font-bold items-center duration-500">
                    <i class="fa fa-heart mr-3 duration-500"></i>Save Attributes
                  </div>
                </div>
                <!-- !Save Attributes -->
                <%# end %>

              </div>
            </div>

          </div>

        </div>
        <!-- !Attributes -->

        <!-- Variations -->
        <!--        <div id="input-variations" class="tab-content">-->
        <%#= link_to create_variations_from_attrs_products_path,
                      class: "link-no-style w-full mb-3 max-w-xs font-bold shadow-sm", method: "post", remote: true do %>
        <!--                      <div class="w-full flex justify-center">-->
        <!--                        <button type="submit" class="flex inline-block font-roboto outline-none-imp font-bold items-center duration-500 text-gray-800">-->
        <!--                          <i class="fa fa-sign-in-alt mr-3 duration-500"></i>Sign In-->
        <!--                        </button>-->
        <!--                      </div>-->
        <!--            <div class="custom-btn-normal ml-2 f6 width-min py-2">Create</div>-->

        <%# end %>
        <%#= link_to "Create", create_variations_from_attrs_products_path, method: "post", remote: true %>
        <!--        </div>-->

        <!-- Advanced -->
        <div id="input-inventory" class="tab-content">
          <%= meta.simple_fields_for :product_advanced do |advanced| %>
            <!-- Purchase note -->
            <div class="field mt-2">
              <div class="control flex mt-2 justify-start">
                <%= advanced.input :purchase_note, label: "Purchase note", required: false,
                                   input_html: {class: "input w-8/12 flex-grow w-full py-2  font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"}, wrapper: false, label_html: {class: "label w-4/12 flex-shrink-0 flex-shrink-0 text-left"} %>
              </div>
            </div>
            <!-- !Purchase note -->

            <!-- Reviews? -->
            <div class="field mt-2">
              <div class="control flex mt-2 justify-start">
                <%= advanced.label "Enable reviews", class: "label w-4/12 flex-shrink-0 flex-shrink-0 text-left" %>
                <div>
                  <%= advanced.check_box :enable_reviews, class: "input" %>
                </div>
              </div>
            </div>
            <!-- !Reviews? -->
          <% end %>
        </div>
        <!-- !Advanced -->

        <!-- More options -->
        <div id="input-inventory" class="tab-content">
          <%= meta.simple_fields_for :product_advanced do |advanced| %>
            <!-- Purchase note -->
            <div class="field mt-2">
              <div class="control flex mt-2 justify-start">
                <%= advanced.input :purchase_note, label: "Purchase note", required: false,
                                   input_html: {class: "input w-8/12 flex-grow w-full py-2  font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"}, wrapper: false, label_html: {class: "label w-4/12 flex-shrink-0 flex-shrink-0 text-left"} %>
              </div>
            </div>
            <!-- !Purchase note -->

            <!-- Reviews? -->
            <div class="field mt-2">
              <div class="control flex mt-2 justify-start">
                <%= advanced.label "Enable reviews", class: "label w-4/12 flex-shrink-0 flex-shrink-0 text-left" %>
                <div>
                  <%= advanced.check_box :enable_reviews, class: "input" %>
                </div>
              </div>
            </div>
            <!-- !Reviews? -->
          <% end %>
        </div>
        <!-- !More options -->

        <!-- Extra -->
        <div id="input-inventory" class="tab-content">
          <%= meta.simple_fields_for :product_extra do |extra| %>
            <!-- Custom bubble -->
            <!--                    <div class="field mt-2">-->
            <!--                      <div class="control flex mt-2 justify-start">-->
            <%#= meta.input :regular_price, label: "Custom bubble", required: false,       input_html: {class: "input w-8/12 flex-grow w-full py-2  font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"}, wrapper: false, label_html: {class: "label w-4/12 flex-shrink-0 flex-shrink-0 text-left"} %>
            <!--                      </div>-->
            <!--                    </div>-->
            <!-- !Custom bubble -->

            <!-- Custom bubble title -->
            <!--                    <div class="field mt-2">-->
            <!--                      <div class="control flex mt-2 justify-start">-->
            <%#= meta.input :price, label: "Custom Bubble Title", required: false,                                    input_html: {class: "input w-8/12 flex-grow w-full py-2  font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"}, wrapper: false, label_html: {class: "label w-4/12 flex-shrink-0 flex-shrink-0 text-left"} %>
            <!--                      </div>-->
            <!--                    </div>-->

            <!-- !Custom bubble title -->

            <!-- Product Video -->
            <div class="field mt-2">
              <div class="control flex mt-2 justify-start">
                <%= extra.input :product_video, label: "Product Video", required: false,
                                input_html: {class: "input w-8/12 flex-grow w-full py-2  font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"}, wrapper: false, label_html: {class: "label w-4/12 flex-shrink-0 flex-shrink-0 text-left"} %>
              </div>
            </div>

            <!-- !Product Video -->
          <% end %>

        </div>
        <!-- !Extra -->

      </div>

    </div>
  <% end %>
<% end %>