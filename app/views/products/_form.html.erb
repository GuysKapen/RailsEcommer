<section class="section">
  <%= simple_form_for(@product) do |f| %>
    <%= f.simple_fields_for :product_meta do |meta| %>

      <div class="d-flex mx-2">
        <div class="ml-3 col-9">
          <div class="text-center">
            <div class="field">
              <div class="control">

                <%= meta.input :name, label: "Product Name", required: true,
                               placeholder: "Name",
                               input_html: {class: "input w-100 flex-grow-1 w-full py-2 rounded-lg font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"}, wrapper: false, label_html: {class: "label text-left w-100"} %>
              </div>
            </div>

            <div class="field mt-5">
              <div class="control">
                <%= meta.input :description, as: :ckeditor, label: "Description", required: true,
                               input_html: {class: "input w-100"}, wrapper: false, label_html: {class: "label text-left w-100"} %>
              </div>
            </div>

            <!--          <div class="field mt-5">-->
            <!--            <div class="control">-->
            <%#= f.input :price, label: "Price", required: true, input_html: {class: "input w-100"}, wrapper: false, label_html: {class: "label text-left w-100"} %>
