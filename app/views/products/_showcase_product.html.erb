<section class="mx-16 background-light rounded-md shadow-md">
  <div class="flex flex-col lg:flex-row justify-center items-center flex-cols-3 flex-wrap lg:flex-no-wrap">
    <div class="pl-0 lg:pl-16 mt-4">
      <h3 class="mx-auto text-left font-josesans">Exclusive products</h3>
      <h3 class="mx-auto text-left font-josesans font-bold mt-4">SAMSUNG PHONE</h3>
      <%= link_to products_url do %>
        <div class="mx-auto lg:ml-4 rounded-circle w-24 h-24 bg-black mt-8 flex flex-col justify-center items-center">
          <span class="material-icons text-white flip-x">north_east</span>
          <p class="text-white h6 font-josesans mt-2">Shop now</p>
        </div>
      <% end %>
    </div>
    <div class="background-light mt-auto relative">
      <div>
        <%= image_tag("phone_sss20.jpeg", class: "mix-blend-darken w-9/12 h-75 m-auto") %>
      </div>
      <div class="bg-white absolute bottom-1/8 right-4 rounded-circle w-24 h-24 flex justify-center flex-col items-center">
        <span class="material-icons">north_east</span>
        <p class="text-right font-josesans h6 mt-2">Get now</p>
      </div>
    </div>
    <div class="my-4 lg:mt-16">
      <p class="font-weight-light f6 w-full lg:w-9/12 text-center lg:text-right">
        The SS10 features a 25% battery (than SS9) 7.9' screen with AMOLED color full-touch display with adjustable brightness so everything
        is clear as it can be
      </p>
    </div>
  </div>
</section>