toastr.success("Success add product to Cart")
$("#cart-items")?.text("<%= @cart_item %>")

$("#cart-popup-container").html("<%= escape_javascript render 'cart/cart_popup', cart: @cart %>").css('display', 'initial').css('opacity', '1')
$("#cart-popup-subtotal").text("<%= number_to_currency(@product_carts_subtotal) %>")
setTimeout(() => {
    $("#cart-popup-container").css('opacity', '0')
}, 3000)
setTimeout(() => {
    $("#cart-popup-container").css('display', 'none')
}, 6000)

