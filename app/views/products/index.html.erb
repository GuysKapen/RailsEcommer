      <!-- Details -->
      <hr class="my-3">
      <h5 class="text-gray-800 f5 p-0 m-0 font-weight-bold text-uppercase">See Our Products</h5>
      <iframe class="mt-2" height="200" src="https://www.youtube.com/embed/yrV2WFXN8X4">
      </iframe>
      <!-- !Details -->

    </div>
    <div class="container mx-auto">
      <div class="flex items-end">
        <h5 class="text-gray-800 f2 p-0 m-0 font-weight-bold text-uppercase">Categories</h5>
        <p class="f5 ml-8 color-fade">Found: <span class="text-gray-800 f6">17,823 products</span></p>
      </div>

      <div class="mt-5 flex">
        <span class="material-icons-outlined material-icons">filter_list</span>
        <p class="f5 ml-1 color-fade">Sort by -
          <!--          <span class="text-gray-800 f6">Price High to Low</span>-->
        </p>
        <select name="" id="select-product-sort" class="border-none-imp f5 pl-0 ml-1">
          <option value="price-desc">Price High to Low</option>
          <option value="price-asc">Price Low to High</option>
        </select>
      </div>
      <section class="mt-3">
        <div id="container-product-grid-items-product-index">
          <div class="grid grid-cols-3 grid-gap-3-2 grid-product-items">
            <% @products.each do |product| %>
              <%= render 'products/product_item', product: product, sort: true %>
            <% end %>
          </div>
        </div>
      </section>
    </div>
  </div>

</div>
