<%= simple_form_for(@order) do |f| %>
  <div class="d-flex justify-content-between px-5">
    <!-- Form -->
    <section class="col-6 px-0">

      <!-- Billing Details -->

      <h3 class="font-weight-bolder text-gray-800 f5">Billing Details</h3>
      <div class="d-flex justify-content-between px-0">
        <div class="field">
          <div class="control d-flex flex-column mt-2 justify-content-start">
            <%= f.input :first_name, label: "First Name", required: true,
                        placeholder: "First Name",
                        input_html: {class: "input flex-grow-1 w-full py-2 rounded-lg font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"},
                        wrapper: false, label_html: {class: "label d-inline-block text-left"} %>
          </div>
        </div>

        <div class="field ml-2">
          <div class="control d-flex mt-2 flex-column justify-content-start">
            <%= f.input :last_name, label: "Last Name", required: true,
                        placeholder: "Last Name",
                        input_html: {class: "input flex-grow-1 w-full py-2 rounded-lg font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"},
                        wrapper: false, label_html: {class: "label d-inline-block text-left"} %>
          </div>
        </div>
      </div>

      <!-- !Billing Details -->

      <!-- Company -->
      <hr class="my-3">

      <div class="field">
        <div class="control d-flex flex-column mt-2 justify-content-start">
          <%= f.input :company, label: "Company Name (Optional)", required: false,
                      placeholder: "Company Name",
                      input_html: {class: "input flex-grow-1 w-full py-2 rounded-lg font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"},
                      wrapper: false, label_html: {class: "label d-inline-block text-left"} %>
        </div>
      </div>
      <!-- !Company -->

      <!-- Country -->

      <hr class="my-3">

      <div class="field">
        <div class="control d-flex flex-column mt-2 justify-content-start">
          <%= f.input :country, label: "Country Region", selected: "Australia", required: true,
                      placeholder: "Country",
                      value: "Germany",
                      input_html: {class: "input flex-grow-1 w-full py-2 rounded-lg font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"},
                      wrapper: false, label_html: {class: "label d-inline-block text-left"} %>
          <%#= country_select("order", "country", selected: "Australia") %>
        </div>
      </div>
      <!-- !Country -->

      <!-- Address -->

      <hr class="my-3">

      <div class="field">
        <div class="control d-flex flex-column mt-2 justify-content-start">
          <%= f.input :address, label: "Street Address", required: true,
                      placeholder: "32 Avalon",
                      input_html: {class: "input flex-grow-1 w-full py-2 rounded-lg font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"},
                      wrapper: false, label_html: {class: "label d-inline-block text-left"} %>
        </div>
      </div>
      <!-- !Address -->

      <!-- State -->
      <hr class="my-3">

      <div class="field">
        <div class="control d-flex flex-column mt-2 justify-content-start">
          <%= f.input :city, label: "State/City", required: true,
                      placeholder: "California",
                      input_html: {class: "input flex-grow-1 w-full py-2 rounded-lg font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"},
                      wrapper: false, label_html: {class: "label d-inline-block text-left"} %>
        </div>
      </div>
      <!-- !State -->

      <!-- Zip code -->
      <hr class="my-3">

      <div class="field">
        <div class="control d-flex flex-column mt-2 justify-content-start">
          <%= f.input :zip_code, label: "Zip", required: true,
                      placeholder: "3231",
                      input_html: {class: "input flex-grow-1 w-full py-2 rounded-lg font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"},
                      wrapper: false, label_html: {class: "label d-inline-block text-left"} %>
        </div>
      </div>
      <!-- !Zip code -->

      <!-- Phone -->
      <hr class="my-3">

      <div class="field">
        <div class="control d-flex flex-column mt-2 justify-content-start">
          <%= f.input :phone, label: "Phone Number", required: true, type: "text",
                      placeholder: "0923481234",
                      input_html: {class: "input flex-grow-1 w-full py-2 rounded-lg font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"},
                      wrapper: false, label_html: {class: "label d-inline-block text-left"} %>
        </div>
      </div>


      <!-- !Phone -->

      <!-- Email -->
      <hr class="my-3">

      <div class="field">
        <div class="control d-flex flex-column mt-2 justify-content-start">
          <%= f.input :email, label: "Email", required: true, type: "email",
                      placeholder: "example@gmail.com",
                      input_html: {class: "input flex-grow-1 w-full py-2 rounded-lg font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"},
                      wrapper: false, label_html: {class: "label d-inline-block text-left"} %>
        </div>
      </div>
      <!-- !Email -->

      <!-- Addition Information -->
      <hr class="my-3">

      <div class="field">
        <div class="control d-flex flex-column mt-2 justify-content-start">
          <%= f.input :note, label: "Note (Optional)", required: false, type: "text",
                      placeholder: "Notes about your order",
                      :as => :text,
                      input_html: {class: "input flex-grow-1 w-full py-2 rounded-lg font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"},
                      wrapper: false, label_html: {class: "label d-inline-block text-left"} %>
        </div>
      </div>
      <!-- !Addition Information -->
    </section>
    <!-- !Form -->

    <!-- Product -->
    <section class="col-5">
      <h3 class="font-weight-bolder text-gray-800 f5">Order Details</h3>
      <hr>
      <% @order_view.products.each do |product| %>
        <div class="d-flex justify-content-between align-items-center">
          <span class="text-gray-600 f6"><%= product.name %></span>
          <span class="font-weight-bold f5">$<%= product.product_meta.regular_price %></span>
        </div>
      <% end %>
      <!--      <div class="d-flex justify-content-between align-items-center">-->
      <!--        <span class="text-gray-600 f6">IPhone</span>-->
      <!--        <span class="font-weight-bold f5">$1000</span>-->
      <!--      </div>-->
      <!--      <div class="d-flex justify-content-between align-items-center mt-2">-->
      <!--        <span class="text-gray-600 f6">Asus Laptop</span>-->
      <!--        <span class="font-weight-bold f5">800$</span>-->
      <!--      </div>-->
      <hr class="mt-2">

      <!-- Subtotal -->
      <div class="d-flex justify-content-between align-items-center">
        <span class="text-gray-800 font-weight-bold f6">Subtotal</span>
        <span class="font-weight-bold f5">$<%= @order_view.subtotal %></span>
      </div>
      <div class="d-flex justify-content-between align-items-center mt-2">
        <span class="text-gray-800 font-weight-bold f6">Total</span>
        <span class="font-weight-bold f5">$<%= @order_view.total %></span>
        <%= f.hidden_field :total, :name => "total", :value => @order_view.total %>
      </div>
      <hr class="mt-2">
      <!-- !Subtotal -->

      <div class="d-flex justify-content-start align-items-center">
        <label class="d-flex justify-content-center align-items-center m-0">
          <input type="checkbox" name="use_paypal">
          <span class="d-inline-block rounded-circle icon-size checkbox-size border-color-default border-1 checkbox-span mr-2"></span>
        </label>
        <span>Paypal</span>
      </div>
      <hr class="mt-2">

      <div class="d-flex justify-content-start align-items-center">
        <label class="d-flex justify-content-center align-items-center m-0">
          <input type="checkbox" name="use_credit_card" class="checkbox-section" data-checkbox="section-credit-card">
          <span class="d-inline-block rounded-circle icon-size checkbox-size border-color-default border-1 checkbox-span mr-2"></span>
        </label>
        <span>Credit Card</span>
      </div>
      <hr class="mt-2">

      <section class="ml-5 hidden" id="section-credit-card">

        <!-- Card number -->
        <div class="field">
          <div class="control d-flex flex-column justify-content-start">
            <%= f.input :card_number, label: "Card Number", required: false, type: "email",
                        placeholder: "4242 4242 4242",
                        input_html: {class: "input flex-grow-1 w-full py-2 rounded-lg font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"},
                        wrapper: false, label_html: {class: "label d-inline-block text-left"} %>
          </div>
        </div>
        <!-- !Card number -->

        <!-- Expiry Date -->
        <div class="field">
          <div class="control d-flex flex-column mt-2 justify-content-start">
            <%= f.input :expiry_date, label: "Expiry Date", required: false, type: "email",
                        placeholder: "02/34",
                        input_html: {class: "input flex-grow-1 w-full py-2 rounded-lg font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"},
                        wrapper: false, label_html: {class: "label d-inline-block text-left"} %>
          </div>
        </div>
        <!-- !Expiry Date -->

        <!-- Card code -->
        <div class="field">
          <div class="control d-flex flex-column mt-2 justify-content-start">
            <%= f.input :card_code, label: "Card Code", required: false, type: "email",
                        placeholder: "323",
                        input_html: {class: "input flex-grow-1 w-full py-2 rounded-lg font-medium bg placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800"},
                        wrapper: false, label_html: {class: "label d-inline-block text-left"} %>
          </div>
        </div>
        <!-- !Card code -->

        <div class="d-flex justify-content-start align-items-center mt-2">
          <label class="d-flex justify-content-center align-items-center m-0">
            <input type="checkbox" name="agree">
            <span class="d-inline-block rounded-circle icon-size checkbox-size border-color-default border-1 checkbox-span mr-2"></span>
          </label>
          <span>Save payment info for future use</span>
        </div>
        <hr class="my-2">
      </section>

      <div class="d-flex justify-content-start align-items-center">
        <label class="d-flex justify-content-center align-items-center m-0">
          <input type="checkbox" name="agree">
          <span class="d-inline-block rounded-circle icon-size checkbox-size border-color-default border-1 checkbox-span mr-2"></span>
        </label>
        <span>I have read and agree to terms</span>
      </div>
      <hr class="mt-2">

      <%= button_tag(type: 'submit', class: "justify-content-center button-wishlist d-inline-block w-100 d-flex font-roboto f6 outline-none-imp font-weight-bolder align-items-center duration-500") do %>
        <i class="fa fa-heart mr-3 duration-500"></i>Place Order
      <% end %>
    </section>
    <!-- !Product -->

  </div>

<% end %>