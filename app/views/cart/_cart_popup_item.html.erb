<% product_carts.each do |product_cart| %>
  <div class="d-flex mx-3 p-0 my-1 shadow-md flex-grow-1 rounded-md justify-between pr-3">
    <div class="d-flex">
      <div>
        <%= image_tag(product_first_img(product_cart.product), width: 64, height: 64) %>
      </div>
      <div class="ml-3 d-flex flex-column justify-content-center">
        <p class="my-0"><%= product_cart.product.product_meta.product_detail.name %></p>
        <p class="fw6 f6"><span class="text-gray-600 opacity-50"> <%= product_cart.quantity > 1 ? "#{product_cart.quantity} x " : "" %></span><%= number_to_currency(product_cart.product.price) %></p>
      </div>
    </div>
    <div class="d-flex align-items-center">
      <i class="fa fa-times-circle fa-lg"></i>
    </div>
  </div>
<% end %>
