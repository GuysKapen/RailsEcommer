<h3 class="text-center my-5">My account</h3>
<section class="w-11/12 mx-auto">
  <div class="flex mb-3 mx-0 tab-view pr-2">
    <div class="w-3/12 mx-0 px-0 child-my-2-not-first tabs-panel">

      <div class="flex mt-0-imp mx-0 flex cursor-pointer active tab-panel background-hover-white py-2">
        <div class="w-2/12 px-4 text-left">
          <i class="fas mt-1 fa-wrench text-center"></i>
        </div>
        <p class="ml-3 f4">Dashboard</p>
      </div>

      <div class="flex mt-1 mx-0 flex cursor-pointer tab-panel background-hover-white py-2">
        <div class="w-2/12 px-4 text-left">
          <i class="fas mt-1 fa-shipping-fast text-center"></i>
        </div>
        <p class="ml-3 f4">Orders</p>
      </div>

      <div class="flex mx-0 mt-1 flex cursor-pointer tab-panel background-hover-white py-2">
        <div class="w-2/12 px-4 text-left">
          <i class="fas mt-1 fa-paperclip text-center"></i>
        </div>
        <p class="ml-3 f4">Address</p>
      </div>

      <div class="flex mx-0 mt-1 flex cursor-pointer tab-panel background-hover-white py-2">
        <div class="w-2/12 px-4 text-left">
          <i class="fas mt-1 fa-ethernet text-center"></i>
        </div>
        <p class="ml-3 f4">Payment methods</p>
      </div>

      <div class="flex mx-0 mt-1 flex cursor-pointer tab-panel background-hover-white py-2">
        <div class="w-2/12 px-4 text-left">
          <i class="fas mt-1 fa-ellipsis-v text-center"></i>
        </div>
        <p class="ml-3 f4">Account detail</p>
      </div>

      <div class="flex mx-0 mt-1 flex cursor-pointer tab-panel background-hover-white py-2">
        <div class="w-2/12 px-4 text-left">
          <i class="fas mt-1 fa-users-cog text-center"></i>
        </div>
        <p class="ml-3 f4">Wishlist</p>
      </div>

    </div>
    <div class="w-9/12 ml-12 px-0 tabs-content">
      <!-- Dashboard -->
      <div class="active tab-content ">
        <div class="flex color-fade my-3">
          <div class="w-1/12 pl-0">#</div>
          <div class="w-3/12">Product Name</div>
          <div class="w-2/12">Sale</div>
          <div class="w-2/12">Price</div>
          <div class="w-2/12">Earning</div>
          <div class="w-2/12">Product Status</div>
        </div>
        <hr class="color-fade my-2">
        <% @products.each do |product| %>
          <div>
            <div class="flex mt-2 ml-0 items-center">
              <div class="w-1/12 flex justify-start pl-0">
                #<%= product.id %>
              </div>
              <div class="w-3/12 flex items-center">
                <div class="cursor-pointer text-left mix-blend-darken bg-product-img w-4/12">
                  <%= image_tag(product_first_img(product), class: 'w-16 h-16 mix-blend-darken object-contain') %>
                </div>
                <div class="pl-3 font-baloo font-bold f4 w-8/12">
                  <%= product.name %>
                </div>
              </div>
              <div class="w-2/12 overflow-hidden overflow-ellipsis">200</div>
              <div class="w-2/12"><%= product.price_text %></div>
              <div class="w-2/12 font-bold">$1200</div>
              <div class="w-2/12"><i class="fa fa-check-circle"></i></div>
            </div>
            <hr class="color-fade my-2">
          </div>
        <% end %>

      </div>
      <!-- !Dashboard -->

      <!-- Order -->
      <div id="input-inventory" class="tab-content ">
        <div class="flex color-fade my-3">
          <div class="flex w-2/12 pl-0">
            <div class="w-4/12 pl-0">#</div>
            <div class="">Date</div>
          </div>
          <div class="w-2/12">Status</div>
          <div class="w-2/12">Items</div>
          <div class="w-2/12">Customer</div>
          <div class="w-1/12">Country</div>
          <div class="w-1/12">Delivery</div>
          <div class="w-1/12">Total</div>
          <div class="w-1/12">Paid</div>
        </div>
        <hr class="color-fade my-2">
        <% @orders.each do |order| %>
          <div>
            <div class="flex mt-2 ml-0 justify-start">
              <div class="w-2/12 pr-2 flex-shrink-0 flex justify-start pl-0">
                <div class="w-4/12 pl-0">
                  #<%= order.id %>
                </div>
                <div class="w-8/12">
                  <span class="font-bold"><%= order.created_at.to_formatted_s(:long_ordinal) %></span>
                </div>
              </div>
              <div class="w-2/12 pr-2 font-bold flex-shrink-0">Ready to ship</div>
              <div class="w-2/12 pr-2">
                <% order.product_carts.each do |product_cart| %>
                  <div>
                    <%= product_cart.quantity %> x <%= product_cart.product.name %>
                  </div>
                <% end %>
              </div>
              <div class="w-2/12 pr-2 text-center overflow-hidden overflow-ellipsis flex-shrink-0"><%= order.user.email %></div>
              <div class="w-1/12 pr-2 text-center flex-shrink-0"><%= order.country %></div>
              <div class="w-1/12 pr-2 text-center flex-shrink-0">Next Day</div>
              <div class="w-1/12 pr-2 text-center font-bold flex-shrink-0"><%= order.total %></div>
              <div class="w-1/12 pr-2 text-center flex-shrink-0"><i class="fa fa-check-circle"></i></div>
            </div>
            <hr class="color-fade my-2">
          </div>
        <% end %>

      </div>
      <!-- !Order -->

      <!-- Address -->
      <div class="tab-content">
        <section class="m-5">
          <% @order_user_infos.each do |user_info| %>
            <div class="border-color-default border-solid border-1 rounded-md shadow-md p-3">
              <div class="flex items-center">
                <span class="ml-2 font-bold f5"><%= country_name(user_info.country) %></span>
                <span class="ml-2 font-bold f5"><%= user_info.city %></span>
                <span class="ml-2 font-bold f5"><%= user_info.address %></span>
                <span class="ml-2 font-bold f5"><%= user_info.email %></span>
              </div>
            </div>
          <% end %>
        </section>

      </div>
      <!-- !Address -->

      <!-- Payment -->
      <div id="input-inventory" class="tab-content flex flex-col h-full">
        <div class="flex color-fade my-3">
          <div class="w-4/12">Method</div>
          <div class="w-4/12">Expire</div>
        </div>
        <hr class="color-fade my-2">
        <div>
          <div class="flex mt-2 ml-0">
            <div class="w-4/12 font-bold">Visa ending in 4242</div>
            <div class="w-4/12">12/34</div>
            <div class="flex justify-end flex-grow">
              <div class="custom-btn-wide">
                Delete
              </div>
            </div>
          </div>
          <hr class="color-fade my-2">
          <div class="flex mt-2 ml-0">
            <div class="w-4/12 font-bold">Paypal</div>
            <div class="w-4/12">12/99</div>
            <div class="flex-grow flex justify-end align-self-end">
              <div class="custom-btn-wide">
                Delete
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- !Payment -->

      <!-- Account -->
      <div id="input-inventory" class="tab-content">
        <section class="m-5">
          <div class="border-color-default border-solid border-1 rounded-md shadow-md p-3">
            <div class="flex items-center mt-2">
              <div class="w-4/12 font-bold">Email:</div>
              <div><%= current_user.email %></div>
            </div>
            <div class="flex items-center mt-2">
              <div class="w-4/12 font-bold">Address:</div>
              <div><%= @orders.last.address %></div>
            </div>
            <div class="flex items-center mt-2">
              <div class="w-4/12 font-bold">Phone:</div>
              <div><%= @orders.last.phone %></div>
            </div>
            <div class="flex items-center mt-2">
              <div class="w-4/12 font-bold">Country:</div>
              <div><%= country_name(@orders.last.country) %></div>
            </div>
          </div>
        </section>

      </div>
      <!-- !Account -->

      <!-- Wishlist -->
      <div class="tab-content">
        <% unless @wishlist.nil? %>
          <%= render 'products/product_grid_items', products: @wishlist.product_carts.map(&:product) %>
        <% end %>
      </div>
      <!-- !Wishlist -->

    </div>
  </div>
</section>