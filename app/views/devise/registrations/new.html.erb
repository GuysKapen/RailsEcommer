<section class="p-3">

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="min-h-screen bg-gray-100 text-gray-900 flex justify-center">
      <div class="max-w-screen-xl m-0 sm:m-20 bg-white shadow sm:rounded-lg flex justify-center flex-1">
        <div class="mt-12 flex flex-col items-center">
          <h1 class="text-2xl xl:text-3xl font-extrabold">Sign Up</h1>
          <form
            class="w-full flex-1 mt-8 text-indigo-500"
          >
            <div class="mx-auto max-w-xs relative">
              <%= f.input :first_name,
                          required: true,
                          autofocus: true,
                          input_html: {class: "w-full py-2 rounded-lg font-medium bg-gray-100 border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800 my-2", place_holder: "email"},
                          label_html: {class: "d-none"},
                          placeholder: "First Name"

              %>
              <%= f.input :last_name,
                          required: true,
                          autofocus: true,
                          input_html: {class: "w-full py-2 rounded-lg font-medium bg-gray-100 border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800 my-2", place_holder: "email"},
                          label_html: {class: "d-none"},
                          placeholder: "Last Name"

              %>
              <%= f.input :username,
                          required: true,
                          autofocus: true,
                          input_html: {class: "w-full py-2 rounded-lg font-medium bg-gray-100 border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800 my-2", place_holder: "email"},
                          label_html: {class: "d-none"},
                          placeholder: "User Name"

              %>
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: {autocomplete: "email", class: "w-full py-2 rounded-lg font-medium bg-gray-100 border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800 my-2", place_holder: "email"},
                          label_html: {class: "d-none"},
                          placeholder: "Email"

              %>
              <%= f.input :password,
                          required: true,
                          # hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: {autocomplete: "new-password", class: "w-full py-2 rounded-lg font-medium bg-gray-100 border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800 my-2"},
                          label_html: {class: "d-none"},
                          placeholder: "Password"
              %>
              <%= f.input :password_confirmation,
                          required: true,
                          input_html: {autocomplete: "new-password", class: "w-full py-2 rounded-lg font-medium bg-gray-100 border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800 my-2"},
                          label_html: {class: "d-none"},
                          placeholder: "Password Confirm"
              %>
              <!--            <input-->
              <!--              type="text"-->
              <!--              placeholder="Name"-->
              <!--              class="w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800 my-2"-->
              <!--              />-->
              <!--            <input-->
              <!--              type="email"-->
              <!--              placeholder="Email"-->
              <!--              class="w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border-gray-200 placeholder-gray-500 text-sm focus:outline-none placeholder-gray-800 focus:border-gray-400 focus:bg-white my-2"-->
              <!--              />-->
              <!--            <input-->
