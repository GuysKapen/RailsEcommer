<section class="p-3">


  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="min-h-screen bg-gray-100 text-gray-900 flex justify-center">
      <div class="max-w-screen-xl m-0 sm:m-20 bg-white shadow sm:rounded-lg flex justify-center flex-1">
        <div class="mt-12 flex flex-col items-center py-3">
          <h1 class="text-2xl xl:text-3xl font-extrabold">Sign In</h1>


          <form
            class="w-full flex-1 mt-8 text-indigo-500"
          >
            <div class="mx-auto max-w-xs relative">

              <%= link_to new_user_registration_path, class: "link-no-style w-full mb-3 max-w-xs font-bold shadow-sm rounded-lg py-3 link-no-style-->
              bg-indigo-100 hover:bg-indigo-800 flex items-center justify-center transition-all duration-300 ease-in-out focus:outline-none hover:shadow focus:shadow-sm focus:shadow-outline mt-3" do %>
                <div class="w-full flex justify-center">
                  <button type="submit" class="flex d-inline-block f6 font-roboto outline-none-imp font-weight-bold align-items-center duration-500 text-gray-800">
                    <i class="fab fa-google mr-3 duration-500"></i>Sign In With Google
                  </button>
                </div>
              <% end %>
              <%= link_to new_user_registration_path, class: "link-no-style w-full mb-3 max-w-xs font-bold shadow-sm rounded-lg py-3 link-no-style-->
              bg-indigo-100 hover:bg-indigo-800 flex items-center justify-center transition-all duration-300 ease-in-out focus:outline-none hover:shadow focus:shadow-sm focus:shadow-outline mt-2" do %>
                <div class="w-full flex justify-center">
                  <button type="submit" class="flex d-inline-block f6 font-roboto outline-none-imp font-weight-bold align-items-center duration-500 text-gray-800">
                    <i class="fab fa-facebook mr-3 duration-500"></i>Sign In With Facebook
                  </button>
                </div>
              <% end %>
              <%= link_to new_user_registration_path, class: "link-no-style w-full mb-3 max-w-xs font-bold shadow-sm rounded-lg py-3 link-no-style-->
              bg-indigo-100 hover:bg-indigo-800 flex items-center justify-center transition-all duration-300 ease-in-out focus:outline-none hover:shadow focus:shadow-sm focus:shadow-outline mt-2" do %>
                <div class="w-full flex justify-center">
                  <button type="submit" class="flex d-inline-block f6 font-roboto outline-none-imp font-weight-bold align-items-center duration-500 text-gray-800">
                    <i class="fa fa-user-plus mr-3 duration-500"></i>Sign Up
                  </button>
                </div>
              <% end %>
              <div class="my-3 border-b-text-center">
                <div class="leading-none px-2 inline-block text-sm text-gray-600 tracking-wide font-medium bg-white transform translate-y-1/2">
                  Or sign with email or social login
                </div>
              </div>

              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: {autocomplete: "email", class: "w-full px-8 py-2 rounded-lg font-medium bg-gray-100 border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800 my-2", place_holder: "email"},
                          label_html: {class: "d-none"},
                          placeholder: "Email"

              %>
              <%= f.input :password,
                          required: true,
                          # hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: {autocomplete: "new-password", class: "w-full px-8 py-2 rounded-lg font-medium bg-gray-100 border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white placeholder-gray-800 my-2"},
                          label_html: {class: "d-none"},
                          placeholder: "Password"
              %>

              <%#= f.input :remember_me, type = "checkbox", if devise_mapping.rememberable? %>

              <div class="flex justify-content-start align-items-center mt-2">
                <label class="flex justify-center align-items-center m-0">
                  <input type="checkbox" name="agree">
                  <span class="d-inline-block rounded-circle icon-size checkbox-size border-color-default border-1 checkbox-span mr-2"></span>
                </label>
                <span class="text-gray-600 f6">Remember Me</span>
              </div>

              <div class="w-full flex justify-center my-3 tracking-wide font-semibold bg-indigo-500 text-gray-100 w-full py-3 rounded-lg hover:bg-indigo-700 transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline focus:outline-none">
                <button type="submit" class="flex d-inline-block font-roboto outline-none-imp font-weight-bold align-items-center duration-500">
                  <i class="fa fa-sign-in-alt mr-3 duration-500"></i>Sign In
                </button>
              </div>
              <%#= f.button :submit, "Log In", class: "mt-5 tracking-wide font-semibold bg-indigo-500 text-gray-100 w-full py-3 rounded-lg hover:bg-indigo-700 transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline focus:outline-none" %>

            </div>
            <!--            <div class="flex flex-col items-center w-100">-->
            <%#= link_to "Sign Up", new_user_registration_path, class: "w-full mb-3 max-w-xs font-bold shadow-sm rounded-lg py-3 link-no-style-->
           bg-indigo-600 hover:bg-indigo-800 text-gray-800 flex items-center justify-center transition-all duration-300 ease-in-out focus:outline-none hover:shadow focus:shadow-sm text-white focus:shadow-outline mt-5" %>
            <!--            </div>-->
          </form>
        </div>
      </div>
      <div class='flex-1 bg-indigo-100 text-center hidden lg:flex'>
        <div
          class='m-12 xl:m-16 w-full bg-contain bg-center bg-no-repeat background-login'
        ></div>
      </div>
    </div>
  <% end %>


<%#= render "devise/shared/links" %>
</section>
